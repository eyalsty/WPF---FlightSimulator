<UserControl x:Class="FlightSimulator.Views.AutoPilotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" AcceptsReturn="True" Margin="10,25,10,10"
                 Text="{Binding VM_Text, UpdateSourceTrigger=PropertyChanged}"
                 Background="{Binding VM_Background, UpdateSourceTrigger=PropertyChanged}"/>
        <WrapPanel HorizontalAlignment="Center" Grid.Row="1">
            <Button Content="Clear" Margin="5" Command="{Binding ClearCommand}"/>
            <Button Content="OK" Margin="5" Command="{Binding OkCommand}"/>
        </WrapPanel>
    </Grid>
</UserControl>
